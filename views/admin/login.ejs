<%- include('../partials/header', { lang, siteName, t, currentPath, requestPath }) %>
<section class="section" style="max-width:480px;">
  <h2><%= t('adminLoginTitle') %></h2>
  <% if (typeof error !== 'undefined') { %>
  <div class="error-message"><%= error %></div>
  <% } %>
  <form method="post" action="/admin/login?lang=<%= lang %>">
    <label for="username"><%= t('username') %></label>
    <input class="form-control" type="text" id="username" name="username" required />
    <label for="password"><%= t('password') %></label>
    <input class="form-control" type="password" id="password" name="password" required />
    <button class="btn btn-primary" type="submit"><%= t('login') %></button>
  </form>
</section>
<%- include('../partials/footer', { t }) %>
