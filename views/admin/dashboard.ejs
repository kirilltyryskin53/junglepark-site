<%- include('../partials/header', { lang, siteName, t, currentPath, requestPath }) %>
<section class="admin-wrapper">
  <div class="admin-card">
    <div style="display:flex;justify-content:space-between;align-items:center;">
      <h2><%= t('dashboard') %></h2>
      <a class="btn btn-outline" href="/admin/logout?lang=<%= lang %>"><%= t('logout') %></a>
    </div>
    <p><strong><%= t('username') %>:</strong> <%= user.username %></p>
    <p><strong><%= t('role') %>:</strong> <%= user.role %></p>
    <div class="admin-nav" style="margin-top:1.5rem;">
      <a href="/admin/users?lang=<%= lang %>"><%= t('usersRoles') %></a>
      <a href="/admin/menu?lang=<%= lang %>"><%= t('cafeMenu') %></a>
      <a href="/admin/programs?lang=<%= lang %>"><%= t('programs') %></a>
      <a href="/admin/settings?lang=<%= lang %>"><%= t('whatsAppSettings') %></a>
      <a href="/admin/maintenance?lang=<%= lang %>"><%= t('maintenanceControl') %></a>
    </div>
  </div>
  <div class="admin-card">
    <h3><%= t('whatsAppOwnerStatus') %></h3>
    <p>
      <% if (settings.ownerAuthorized) { %>
      ✅ <%= t('ownerAuthorized') %>
      <% } else { %>
      ⚠️ <%= t('ownerNotAuthorized') %>
      <% } %>
    </p>
    <p><%= t('ownerInstructions') %></p>
  </div>
</section>
<%- include('../partials/footer', { t }) %>
