<%- include('../partials/header', { lang, siteName, t, currentPath, requestPath }) %>
<section class="admin-wrapper">
  <div class="admin-card">
    <div style="display:flex;justify-content:space-between;align-items:center;">
      <h2><%= t('whatsAppSettings') %></h2>
      <a class="btn btn-outline" href="/admin/dashboard?lang=<%= lang %>"><%= t('dashboard') %></a>
    </div>
    <form method="post" action="/admin/settings?lang=<%= lang %>">
      <label for="cafeNumber"><%= t('cafeNumber') %></label>
      <input class="form-control" type="text" name="cafeNumber" id="cafeNumber" value="<%= settings.cafeNumber %>" required />
      <label for="cashierNumber"><%= t('cashierNumber') %></label>
      <input class="form-control" type="text" name="cashierNumber" id="cashierNumber" value="<%= settings.cashierNumber %>" required />
      <div style="display:flex;align-items:center;gap:0.75rem;margin:1rem 0;">
        <input type="checkbox" name="ownerAuthorized" id="ownerAuthorized" <%= settings.ownerAuthorized ? 'checked' : '' %> />
        <label for="ownerAuthorized" style="margin:0;">
          <%= settings.ownerAuthorized ? t('ownerAuthorized') : t('ownerNotAuthorized') %>
        </label>
      </div>
      <p><%= t('ownerInstructions') %></p>
      <button class="btn btn-primary" type="submit"><%= t('update') %></button>
    </form>
  </div>
</section>
<%- include('../partials/footer', { t }) %>
